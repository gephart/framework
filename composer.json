{
  "name": "gephart/framework",
  "type": "library",
  "description": "Gephart Framework",
  "keywords": [],
  "homepage": "https://github.com/gephart/framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Michal Katuščák",
      "email": "michal@katuscak.cz"
    }
  ],
  "require": {
    "php": ">=7.0",
    "gephart/annotation": "0.2.*",
    "gephart/configuration": "0.2.*",
    "gephart/dependency-injection": "0.2.*",
    "gephart/event-manager": "0.2.*",
    "gephart/request": "0.2.*",
    "gephart/response": "0.2.*",
    "gephart/routing": "0.2.*"
  },
  "autoload": {
    "psr-4": { "Gephart\\Framework\\": "src/" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "scripts": {
    "gephart-scripts": [
      "Gephart\\Framework\\Composer\\Scripts::install"
    ],
    "post-install-cmd": [
      "@gephart-scripts"
    ],
    "post-update-cmd": [
      "@gephart-scripts"
    ]
  }
}